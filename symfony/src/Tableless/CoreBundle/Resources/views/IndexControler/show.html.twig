{% extends "::base.html.twig" %}

{% block title %}Blog - {{ post.title }}{% endblock %}

{% block content %}

    <div class="container">

        <div class="row">

            <article class="col-lg-12">

                <img class="img-responsive" src="{{ asset(post.getCoverWeb) }}" alt="{{ post.cover }}" title="{{ post.cover }}"/>

                <h1>{{ post.title }}</h1>

                <p>Escrito por: {{ post.author.name }}</p>

                <p>Postado em: {{ post.createdAt | date('d/m/Y - H:m:s') }}</p>

                <p>{{ post.content }}</p>

            </article>

        </div>

    </div>

{% endblock %}
